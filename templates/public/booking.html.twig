{% extends 'base.html.twig' %}

{% block title %}Hello PublicController!{% endblock %}

{% block body %}
<style>

    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="row">
     {% for kamer in kamers %}
    <div class="col-md-8">
        <h3>{{ kamer.name }} kamer <b>â‚¬{{ kamer.price }}</b></h3>
        <img src="{{ asset('uploads/' ~ kamer.imagefile)}}" alt="Girl in a jacket" width="700" height="300">
        <br>
        {{ form_start(form) }}

        <div class="form_group">
            <div class="col-md-12 mb-3">
                {{ form_row(form.checkinDate, {'attr': {'class': ''}}) }}
            </div>
        </div>
        <div class="form_group">
            <div class="col-md-12 mb-3">
                {{ form_row(form.checkoutDate, {'attr': {'class': ''}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                <button type="submit" class="btn btn-outline-info">
                    <i class="fa fa-btn fa-user"></i> Boek Kamer
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    <div class="col-md-4">
        <h3 class="mt-5">Kamer Beschrijving</h3>
        {{ kamer.description }}
        <h3 class="mt-3">Kamer Details</h3>
        <ul>
            <li>{{ kamer.bed }} bedden</li>
        </ul>
    </div>
    {% endfor %}
</div>
{% endblock %}
