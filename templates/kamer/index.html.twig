{% extends 'base.html.twig' %}

{% block title %}Kamer index{% endblock %}

{% block body %}
    <h1>Kamer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Room_nr</th>
                <th>Price</th>
                <th>Description</th>
                <th>Name</th>
                <th>Bed</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kamer in kamers %}
            <tr>
                <td>{{ kamer.id }}</td>
                <td>{{ kamer.roomNr }}</td>
                <td>{{ kamer.price }}</td>
                <td>{{ kamer.description }}</td>
                <td>{{ kamer.name }}</td>
                <td>{{ kamer.bed }}</td>
                <td>
                    <a href="{{ path('kamer_show', {'id': kamer.id}) }}">show</a>
                    <a href="{{ path('kamer_edit', {'id': kamer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('kamer_new') }}">Create new</a>
{% endblock %}
